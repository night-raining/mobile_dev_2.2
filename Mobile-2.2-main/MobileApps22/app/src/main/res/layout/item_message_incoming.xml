<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">
    <TextView android:id="@+id/tv_message_text"
        android:layout_width="wrap_content"
        android:maxWidth="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/bubble_incoming"
        android:padding="16dp"
        android:textSize="20sp"
        android:text="design tutorial with exampled."
        android:textColor="#000" />
    <TextView android:id="@+id/tv_message_date"
        android:textSize="8sp"
        android:layout_alignBottom="@id/tv_message_text"
        android:layout_alignStart="@+id/tv_message_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="21 Dec 21:00"/>

</RelativeLayout>