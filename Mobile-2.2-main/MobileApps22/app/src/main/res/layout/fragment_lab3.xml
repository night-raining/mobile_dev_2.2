<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".lab3.Lab3Fragment">
    <LinearLayout android:id="@+id/ll_panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_weight="0.2">
        <Button android:id="@+id/btn_sendRequest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Send request"
            android:layout_weight="0.2"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Количество угроз"
                android:layout_weight="0.5"
                android:textSize="18sp"
                android:textAlignment="center"
                android:textStyle="bold"/>
            <TextView android:id="@+id/tv_parsedValue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Parsed data"
                android:layout_weight="0.5"
                android:textSize="24sp"
                android:textAlignment="center"/>
        </LinearLayout>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignBottom="@id/ll_panel"
        android:layout_marginTop="10dp"
        android:layout_weight="0.8">
        <TextView
            android:id="@+id/tv_response"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </ScrollView>
</LinearLayout>